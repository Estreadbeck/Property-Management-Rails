<div class="mainpage-wrapper">
  <div class="sidebar">
    <div class="newsletter-date">
      <div class="newsletter-date__date"><%= @latest.created_at.strftime("%e %b") %></div>
      <div class="newsletter-date__year"><%= @latest.created_at.strftime("%Y") %></div>
      <div class="newsletter-date__arrow"></div>
    </div>
    <div class="archive"><%= render "shared/archive.html.erb" %></div>
  </div>

  <div class="content">
    <div class="button-small button-new"><%= link_to fa_icon('plus'), new_newsletter_path %></div>
    <div><%= render "shared/newsletter-display.html.erb", newsletter: @latest %></div>
  </div>

</div>