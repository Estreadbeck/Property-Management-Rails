<%= form_for(@newsletter) do |f| %>

  
      <div class="form-group">
        <%= f.label :title %>
        <%= f.text_field :title, class: 'form-control' %>
      </div>
    
    <div class="col-md-6">
      <div class="form-group">
        <%= f.label :body %>
        <%= f.text_area :body, class: 'form-control', rows: 13 %>
      </div>
    </div>

    <div class="form-group">
      <label class="btn btn-primary">
        Upload an image file <%= f.file_field :image, style: 'display:none;' %>
      </label>
    </div>

      <div class="form-group">
        <%= f.submit 'Save Newsletter', class: 'btn btn-primary btn-block' %>
      </div>

<% end %>
